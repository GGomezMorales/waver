<launch>
    <arg name="model" default="$(find waver_description)/urdf/waver.xacro" />
    <arg name="world_name" default="$(find waver_gazebo)/world/coworking.world" />
    <arg name="paused" default="false" />
    <arg name="use_sim_time" default="true" />
    <arg name="gui" default="true" />
    <arg name="headless" default="false" />
    <arg name="debug" default="false" />
    <arg name="controller_file" default="$(find waver_control)/param/controller.yaml" />
    <arg name="controller_param" default="waver" />
    <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />

    <!-- Gazebo launch -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)" />
        <arg name="paused" value="$(arg paused)" />
        <arg name="use_sim_time" value="$(arg use_sim_time)" />
        <arg name="gui" value="$(arg gui)" />
        <arg name="headless" value="$(arg headless)" />
        <arg name="debug" value="$(arg debug)" />
    </include>

    <!-- Controller launch -->
    <include file="$(find waver_control)/launch/controller.launch">
        <arg name="model" value="$(arg model)" />
        <arg name="controller_file" value="$(arg controller_file)" />
        <arg name="controller_param" value="$(arg controller_param)" />
    </include>

    <!-- Spawn URDF model node -->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model waver" />
</launch>
